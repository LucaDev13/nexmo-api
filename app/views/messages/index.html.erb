<%= render  'layouts/navbar' %>

<h1>Listing Messages</h1>

<table class="sortable responsive">
  <thead>
    <tr>
      <th>Msisdn</th>
      <th>To</th>
      <th>Text</th>
      <th>Keyword</th>
      <th>Type</th>
      <th>MessageId</th>
      <th>Network code</th>
      <th>Price</th>
      <th>Status</th>
      <th>Scts</th>
      <th>Error code</th>
      <th>Message timestamp</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.msisdn %></td>
        <td><%= message.to %></td>
        <td><%= message.text %></td>
        <td><%= message.keyword %></td>
        <td><%= message.type %></td>
        <td><%= message.messageId %></td>
        <td><%= message.network_code %></td>
        <td><%= message.price %></td>
        <td><%= message.status %></td>
        <td><%= message.scts %></td>
        <td><%= message.err_code %></td>
        <td><%= message.message_timestamp %></td>
        <td><%= message.created_at %></td>
        <td><%= message.updated_at %></td>
        <% if current_user %>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td><%= link_to 'Show', message %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path, :class => "button" %>
<br>
<%= will_paginate @dlrs, :class => "pagination text-center"%>
