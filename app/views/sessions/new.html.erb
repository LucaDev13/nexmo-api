<%= render  'layouts/navbar' %>

<div class="row">
  <div class="small-6 large-9 columns">
    <br>
      <h3>Enter your credentials to access the App</h3>
      <br>
      <%= form_tag sessions_path, method: :post do %>
        <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'form-control', required: true %>
        </div>

        <%= submit_tag 'Log In', class: 'button' %>
      <% end %>

 </div>
</div>
