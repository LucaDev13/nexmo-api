<%= render  'layouts/navbar' %>

<p id="notice"><%= notice %></p>

<h1>Listing TTS</h1>

<table class="responsive sortable">
  <thead>
    <tr>
      <th>Call Id</th>
      <th>To</th>
      <th>Status</th>
      <th>Call direction</th>
      <th>Call price</th>
      <th>Call rate</th>
      <th>Call start</th>
      <th>Call end</th>
      <th>Call duration</th>
      <th>Call request</th>
      <th>Network code</th>
      <th>Created at</th>
      <th>Updated at</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tts.each do |tt| %>
      <tr>
        <td><%= tt.call_id %></td>
        <td><%= tt.to %></td>
        <td><%= tt.status %></td>
        <td><%= tt.call_direction %></td>
        <td><%= tt.call_price %></td>
        <td><%= tt.call_rate %></td>
        <td><%= tt.call_start %></td>
        <td><%= tt.call_end %></td>
        <td><%= tt.call_duration %></td>
        <td><%= tt.call_request %></td>
        <td><%= tt.network_code %></td>
        <td><%= tt.created_at %></td>
        <td><%= tt.updated_at %></td>
        <td><%= link_to 'Show', tt %></td>
        <td><%= link_to 'Edit', edit_tt_path(tt) %></td>
        <td><%= link_to 'Destroy', tt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New TTS', new_tt_path, :class => "button" %>
